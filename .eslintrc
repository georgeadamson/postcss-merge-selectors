{
  "parser": "babel-eslint",
  // "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 0,
    "comma-dangle": 0,
    "no-console": 0,
    "no-alert": 0,

    "valid-jsdoc": 2,
    "space-before-function-paren": [2, "always"],
    "indent": [2, 2, {"SwitchCase": 1}],

    // Allow 1-char variables such as _ and $:
    "id-length": [2, { min: 1 }],

    // Reduce these to warnings for our sanity during dev:
    "prefer-const": 1,
    "spaced-comment": 1,
    "no-unused-vars": 1,
    "vars-on-top" : 1,
    "key-spacing": [1, {  "beforeColon": true, "afterColon": true, "mode": "minimum" }],

    // New rules need on upgrade
    "quote-props": [2, "as-needed"],
    "prefer-template": 1,
    "max-len": 0,
    "space-in-parens": 1,
    "computed-property-spacing": 1,

    // Rules for compatability with eslint-config-airbnb 9.X
    "no-underscore-dangle": 0,
    "newline-per-chained-call": 0
  },
  "plugins": [
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  }
}
